<script is:inline>
  // Logika Quizu pozostała bez zmian, aby nie psuć funkcjonalności
  const questions = [
    "Czy poświęcasz coraz więcej czasu na myślenie o grze?",
    "Czy próbujesz grać za coraz wyższe stawki?",
    "Czy zdarzyło Ci się kłamać bliskim?",
    "Czy po przegranej czujesz natychmiastowy przymus „odkucia się”?",
    "Czy masz za sobą próby ograniczenia gry, które się nie udały?",
    "Czy czujesz rozdrażnienie, gdy nie możesz grać?",
    "Czy zdarza Ci się grać, aby uciec od problemów?",
    "Czy z powodu hazardu zaniedbałeś obowiązki?",
    "Czy pieniądze na grę pochodziły z pożyczek lub kradzieży?",
    "Czy hazard przestał być rozrywką, a stał się przymusem?"
  ];

  let currentQuestion = 0;
  let score = 0;

  window.startQuiz = function() {
    document.getElementById('quiz-intro').classList.add('hidden');
    document.getElementById('quiz-questions').classList.remove('hidden');
    showQuestion();
  }

  function showQuestion() {
    const progress = (currentQuestion / questions.length) * 100;
    document.getElementById('quiz-progress').style.width = `${progress}%`;
    document.getElementById('question-counter').innerText = `Pytanie ${currentQuestion + 1} z 10`;
    document.getElementById('question-text').innerText = questions[currentQuestion];
  }

  window.answer = function(val) {
    if(val) score++;
    currentQuestion++;
    if(currentQuestion < questions.length) showQuestion();
    else showResult();
  }

  function showResult() {
    document.getElementById('quiz-questions').classList.add('hidden');
    document.getElementById('quiz-result').classList.remove('hidden');
    const title = document.getElementById('result-title');
    const resultText = document.getElementById('result-text');
    const iconContainer = document.getElementById('result-icon-container');
    
    document.getElementById('icon-green').classList.add('hidden');
    document.getElementById('icon-orange').classList.add('hidden');
    document.getElementById('icon-red').classList.add('hidden');

    if (score === 0) {
      iconContainer.className = "w-20 h-20 md:w-24 md:h-24 rounded-full flex items-center justify-center mx-auto mb-6 bg-emerald-500";
      document.getElementById('icon-green').classList.remove('hidden');
      resultText.innerText = "Swoją relację z hazardem masz pod kontrolą.";
    } else if (score <= 3) {
      iconContainer.className = "w-20 h-20 md:w-24 md:h-24 rounded-full flex items-center justify-center mx-auto mb-6 bg-amber-500";
      document.getElementById('icon-orange').classList.remove('hidden');
      resultText.innerText = "Uważaj! Twoja relacja z hazardem zaczyna być ryzykowna.";
    } else {
      iconContainer.className = "w-20 h-20 md:w-24 md:h-24 rounded-full flex items-center justify-center mx-auto mb-6 bg-red-600";
      document.getElementById('icon-red').classList.remove('hidden');
      resultText.innerText = "Twoja gra nosi znamiona problemu. Skontaktuj się z nami.";
    }
  }
</script>

