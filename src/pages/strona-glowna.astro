<script is:inline>
  const questions = [
    "Czy poświęcasz coraz więcej czasu na myślenie o grze? (planujesz kolejne zakłady, analizujesz wyniki, szukasz sposobów na zdobycie funduszy w trakcie innych zajęć).",
    "Czy próbujesz grać za coraz wyższe stawki, aby poczuć ten sam poziom emocji co kiedyś?",
    "Czy zdarzyło Ci się kłamać bliskim, aby ukryć to, jak często grasz lub ile pieniędzy na to wydajesz?",
    "Czy po przegranej czujesz natychmiastowy przymus „odkucia się” i jak najszybszego powrotu do gry, by odrobić straty?",
    "Czy masz za sobą próby ograniczenia lub zaprzestania gry, które zakończyły się niepowodzeniem?",
    "Czy czujesz rozdrażnienie, niepokój lub złość, gdy próbujesz przestać grać lub gdy nie masz dostępu do gry?",
    "Czy zdarza Ci się grać po to, aby uciec od problemów, poczucia winy, lęku lub by „wyłączyć myślenie”?",
    "Czy z powodu hazardu zdarzyło Ci się zaniedbać obowiązki zawodowe, naukę lub ważne relacje z bliskimi?",
    "Czy pieniądze na grę lub na spłatę długów hazardowych pochodziły od rodziny, znajomych lub z instytucji finansowych?",
    "Czy czujesz, że hazard przestał być rozrywką, a stał się przymusem, który dominuje nad Twoim życiem?"
  ];

  let currentQuestion = 0;
  let score = 0;

  window.startQuiz = function() {
    currentQuestion = 0;
    score = 0;
    document.getElementById('quiz-intro').classList.add('hidden');
    document.getElementById('quiz-result').classList.add('hidden');
    document.getElementById('quiz-questions').classList.remove('hidden');
    showQuestion();
  }

  function showQuestion() {
    const progress = (currentQuestion / questions.length) * 100;
    const progressBar = document.getElementById('quiz-progress');
    if(progressBar) progressBar.style.width = `${progress}%`;
    
    document.getElementById('question-counter').innerText = `Pytanie ${currentQuestion + 1} z ${questions.length}`;
    document.getElementById('question-text').innerText = questions[currentQuestion];
  }

  window.answer = function(val) {
    if(val) score++;
    currentQuestion++;

    if(currentQuestion < questions.length) {
      showQuestion();
    } else {
      showResult();
    }
  }

  function showResult() {
    document.getElementById('quiz-questions').classList.add('hidden');
    document.getElementById('quiz-result').classList.remove('hidden');
    
    const iconContainer = document.getElementById('result-icon-container');
    const title = document.getElementById('result-title');
    const resultText = document.getElementById('result-text');
    
    // Reset ikon i kolorów
    document.getElementById('icon-green').classList.add('hidden');
    document.getElementById('icon-orange').classList.add('hidden');
    document.getElementById('icon-red').classList.add('hidden');
    iconContainer.classList.remove('animate-pulse');

    if (score === 0) {
      iconContainer.className = "w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6 bg-emerald-500 shadow-lg shadow-emerald-200";
      document.getElementById('icon-green').classList.remove('hidden');
      title.className = "text-2xl font-black uppercase mb-4 text-emerald-600";
      resultText.innerText = "Jest ok! Swoją relację z hazardem masz pod kontrolą. Pamiętaj, aby zawsze grać odpowiedzialnie i trzymać się wyznaczonych limitów.";
    } 
    else if (score >= 1 && score <= 3) {
      iconContainer.className = "w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6 bg-amber-500 shadow-lg shadow-amber-200";
      document.getElementById('icon-orange').classList.remove('hidden');
      title.className = "text-2xl font-black uppercase mb-4 text-amber-600";
      resultText.innerText = "Uważaj! Twoja relacja z hazardem zaczyna być ryzykowna. Warto pogłębić wiedzę o mechanizmach gry, zanim granica zostanie przekroczona.";
    } 
    else if (score >= 4 && score <= 6) {
      iconContainer.className = "w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6 bg-red-500 shadow-lg shadow-red-200";
      document.getElementById('icon-red').classList.remove('hidden');
      title.className = "text-2xl font-black uppercase mb-4 text-red-600";
      resultText.innerText = "Skup się! Twoja gra nosi znamiona problemu z hazardem. Tracisz kontrolę nad czasem i finansami. To ostatni moment, by skorzystać z profesjonalnej konsultacji i postawić twarde granice.";
    } 
    else {
      iconContainer.className = "w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6 bg-red-700 shadow-lg shadow-red-300 animate-pulse";
      document.getElementById('icon-red').classList.remove('hidden');
      title.className = "text-2xl font-black uppercase mb-4 text-red-700";
      resultText.innerText = "SKUP SIĘ! Wysokie prawdopodobieństwo uzależnienia. Pamiętaj, to nie jest kwestia „słabej woli”, ale mechanizmów chemicznych mózgu, które znamy od podszewki. Skontaktuj się z nami – wiemy, jak Ci pomóc.";
    }
  }

