        .card-content h3 { font-size: 19px; margin: 0 0 12px 0; font-weight: 800; color: var(--primary); line-height: 1.3; }
        .card-content p { font-size: 14px; color: var(--neutral); line-height: 1.6; margin-bottom: 20px; }

