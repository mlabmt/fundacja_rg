            background: var(--header-bg); 
            border-bottom: 1px solid #cbd5e1; 
            height: 70px;
            flex-shrink: 0;
            z-index: 2000;
        }

        .nav-container { 
            width: 100%;
            max-width: var(--max-ui-width);
            height: 100%;
            margin: 0 auto; 
            padding: 0 40px; 
            display: flex; 
            justify-content: space-between; 
            align-items: center; 
        }

        .logo { font-weight: 800; font-size: 26px; color: var(--primary); text-decoration: none; }
        .logo span { color: var(--accent); }

        nav a { text-decoration: none; color: var(--primary); font-weight: 600; font-size: 14px; text-transform: uppercase; margin-left: 30px; }
        nav a:hover { color: var(--accent); }
        nav a.active { color: var(--accent); }

        /* --- HERO (STAŁE) --- */
        .pub-hero { 
            background: var(--primary); color: var(--white); 
            padding: 40px 5%; flex-shrink: 0;
        }
        .hero-inner { 
            max-width: var(--max-ui-width); margin: 0 auto; 
            display: grid; grid-template-columns: 1fr 380px; gap: 40px; align-items: center;
            text-decoration: none; color: inherit;
        }
        .hero-inner:hover h1 { color: var(--white); opacity: 0.9; }
        
        .featured-tag { color: var(--accent); font-weight: 800; font-size: 11px; text-transform: uppercase; letter-spacing: 1px; }
        .hero-inner h1 { font-size: 32px; margin: 10px 0; font-weight: 800; line-height: 1.1; }
        .hero-inner p { color: #94a3b8; font-size: 15px; line-height: 1.5; margin: 0; }
        
        .hero-box { 
            background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); 
            padding: 25px; border-radius: 8px; font-size: 13px;
        }

        /* --- FILTRY (STAŁE) --- */
        .filter-bar {
            background: var(--white); border-bottom: 1px solid var(--border);
            padding: 15px 5%; flex-shrink: 0;
        }
        .filter-inner { max-width: var(--max-ui-width); margin: 0 auto; display: flex; gap: 10px; align-items: center; }
        .filter-btn {
            background: var(--bg-soft); border: 1px solid var(--border); padding: 8px 18px;
            border-radius: 4px; font-size: 12px; font-weight: 700; cursor: pointer; transition: 0.2s;
        }
        .filter-btn.active { background: var(--primary); color: white; border-color: var(--primary); }
        .filter-btn:hover:not(.active) { border-color: var(--accent); color: var(--accent); }

        /* --- SCROLLOWALNY CONTENT --- */
        .main-content {
            flex-grow: 1; overflow-y: auto; scrollbar-width: thin;
            padding: 40px 5%;
        }
        .main-content::-webkit-scrollbar { width: 6px; }
        .main-content::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }

        .container-grid { 
            max-width: var(--max-ui-width); margin: 0 auto;
            display: grid; grid-template-columns: repeat(auto-fill, minmax(400px, 1fr)); gap: 30px;
        }

        /* KARTA ARTYKUŁU */
        .article-card {
            background: var(--white); border: 1px solid var(--border); border-radius: 8px;
            text-decoration: none; color: inherit; display: flex; flex-direction: column;
            transition: all 0.3s ease; overflow: hidden;
        }
        .article-card:hover { 
            border-color: var(--accent); 
            transform: translateY(-5px); 
            box-shadow: 0 12px 24px rgba(0,0,0,0.05); 
        }

        .card-img { height: 200px; background: #e2e8f0; position: relative; }
        .category-label { 
            position: absolute; top: 15px; left: 15px; background: #000; color: white;
            padding: 5px 10px; font-size: 10px; font-weight: 800; text-transform: uppercase; border-radius: 3px;
