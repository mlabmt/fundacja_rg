        * { box-sizing: border-box; -webkit-font-smoothing: antialiased; }
        html, body { height: 100vh; margin: 0; overflow: hidden; font-family: 'Inter', sans-serif; }

        body { 
            display: flex;
            flex-direction: column;
            background: var(--bg-soft);
            color: var(--text);
        }

