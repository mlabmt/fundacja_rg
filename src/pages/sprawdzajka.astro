<script is:inline>
  const questions = [
    "Czy poświęcasz coraz więcej czasu na myślenie o grze? (planujesz kolejne zakłady, analizujesz wyniki, szukasz sposobów na zdobycie funduszy).",
    "Czy próbujesz grać za coraz wyższe stawki, aby poczuć ten sam poziom emocji co kiedyś?",
    "Czy zdarzyło Ci się kłamać bliskim, aby ukryć to, jak często grasz lub ile pieniędzy na to wydajesz?",
    "Czy po przegranej czujesz natychmiastowy przymus „odkucia się” i jak najszybszego powrotu do gry?",
    "Czy masz za sobą próby ograniczenia lub zaprzestania gry, które zakończyły się niepowodzeniem?",
    "Czy czujesz rozdrażnienie, niepokój lub złość, gdy próbujesz przestać grać?",
    "Czy zdarza Ci się grać po to, aby uciec od problemów, poczucia winy lub lęku?",
    "Czy z powodu hazardu zdarzyło Ci się zaniedbać obowiązki zawodowe lub ważne relacje?",
    "Czy pieniądze na grę pochodziły od rodziny, znajomych lub z pożyczek?",
    "Czy czujesz, że hazard przestał być rozrywką, a stał się przymusem?"
  ];

  let currentQuestion = 0;
  let score = 0;

  window.startQuiz = function() {
    currentQuestion = 0;
    score = 0;
    document.getElementById('quiz-intro').classList.add('hidden');
    document.getElementById('quiz-result').classList.add('hidden');
    document.getElementById('quiz-questions').classList.remove('hidden');
    showQuestion();
  }

  function showQuestion() {
    const progress = (currentQuestion / questions.length) * 100;
    document.getElementById('quiz-progress').style.width = `${progress}%`;
    document.getElementById('question-counter').innerText = `Pytanie ${currentQuestion + 1} z ${questions.length}`;
    document.getElementById('question-text').innerText = questions[currentQuestion];
  }

  window.answer = function(val) {
    if(val) score++;
    currentQuestion++;
    if(currentQuestion < questions.length) {
      showQuestion();
    } else {
      showResult();
    }
  }

  function showResult() {
    document.getElementById('quiz-questions').classList.add('hidden');
    document.getElementById('quiz-result').classList.remove('hidden');
    
    const iconContainer = document.getElementById('result-icon-container');
    const title = document.getElementById('result-title');
    const resultText = document.getElementById('result-text');
    
    document.getElementById('icon-green').classList.add('hidden');
    document.getElementById('icon-orange').classList.add('hidden');
    document.getElementById('icon-red').classList.add('hidden');

    if (score === 0) {
      iconContainer.className = "w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 bg-emerald-500";
      document.getElementById('icon-green').classList.remove('hidden');
      title.className = "text-2xl font-black uppercase mb-2 text-emerald-600";
      resultText.innerText = "Grasz odpowiedzialnie. Trzymaj tak dalej!";
    } 
    else if (score <= 3) {
      iconContainer.className = "w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 bg-amber-500";
      document.getElementById('icon-orange').classList.remove('hidden');
      title.className = "text-2xl font-black uppercase mb-2 text-amber-600";
      resultText.innerText = "Uważaj, Twoja gra zaczyna być ryzykowna.";
    } 
    else {
      iconContainer.className = "w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 bg-red-500";
      document.getElementById('icon-red').classList.remove('hidden');
      title.className = "text-2xl font-black uppercase mb-2 text-red-600";
      resultText.innerText = "Skontaktuj się z nami – Twoja gra nosi znamiona problemu.";
    }
  }
</script>